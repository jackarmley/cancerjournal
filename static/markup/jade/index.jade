extend templates/master

block pagecontent
    .menu
        a.menu-trigger(role="button" href="") +
        ul
            -each val, index in locals.posttypes
                li.menu-option: a(href="")= val
    .entries.layoutwrap
        .entry
            h2 Add an entry
            form
                .fieldgroup
                    label(for='') Title
                    input(type='text')
                .fieldgroup
                    label(for='') Description
                    textarea
                button(type='submit') Submit

        -each val, index in ['post', 'appt', 'mood', 'store']
            div(class='entry entry--cat-#{val}')
                h2 Blood test
                p dqqdwqwdqd
                p: a(href='') Share
